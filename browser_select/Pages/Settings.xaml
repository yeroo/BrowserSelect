<Page x:Class="browser_select.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:browser_select.Pages"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Settings">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ui:Button Margin="15 0" Click="EditButton_Click" Icon="Edit16">settings.json</ui:Button>
        <TextBlock Grid.Row="1" Margin="15" Text="{Binding JsonAutoAppsAndSites}" />
    </Grid>
</Page>
